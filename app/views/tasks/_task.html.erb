<div class="modal fade" tabindex="-1" role="dialog" id="task_modal">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="reg-header">Task</h4>
      </div>
      <div class="modal-body">
        <input type="hidden" id='task_id'>
        <div class="field">
          <label>Title</label><br>
          <input class="form-control" id='task_title'>
        </div>
        <div class="field">
          <label>Details</label><br>
          <input class="form-control" id='task_details'>
        </div>
        <div class="form-group">
          <label>Done</label>
          <input type="checkbox" class="checkbox" id='task_done'>
        </div>
        <div class="field">
          <div class="text-danger" id='task_error'></div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-save-task">Save</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
