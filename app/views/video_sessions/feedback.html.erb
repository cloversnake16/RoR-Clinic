<% provide(:title, "Thank You") %>
<h1>Thank You for using 24-7 Clinic!</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
    <%= form_for(@video_session, url: update_feedback_video_session_path(@video_session)) do |f| %>
      <div class="form-group">
        <%= f.label 'Please rate us!' %>
      </div>
      <%= f.label :feedback %>
      <%= f.text_area :feedback, rows: 8, class: 'form-control' %>

      <%= f.submit 'Submit feedback', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>