<% provide(:title, "Edit Favorite Doctors") %>
<h1>Edit Favorite Doctors</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
    <% if @doctors.count > 0 %>
      <table class="table">
        <tr>
          <th>No</th>
          <th>Name</th>
          <th></th>
        </tr>
        <% @doctors.each do |doctor| %>
          <tr>
            <td><%= doctor.id %></td>
            <td><%= doctor.name %></td>
            <% if @favorite_doctors.find_by(doctor_id: doctor.id) %>
              <td><%= link_to 'Remove', { controller: 'favorite_doctors', action: 'remove', doctor_id: doctor.id }, method: :post %></td>
            <% else %>
              <td><%= link_to 'Add', { controller: 'favorite_doctors', action: 'create', doctor_id: doctor.id }, method: :post %></td>
            <% end %>
          </tr>
        <% end %>
      </table>
    <% end %>
  </div>
</div>