<% provide(:title, "Clinics") %>
<h1>Clinics</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
    <% if @clinics.count > 0 %>
      <table class="table">
        <tr>
          <th>No</th>
          <th>Name</th>
          <th colspan="2"></th>
        </tr>
        <% @clinics.each do |clinic| %>
          <tr>
            <td><%= clinic.id %></td>
            <td><%= clinic.name %></td>
            <td><%= link_to 'Edit', edit_clinic_path(clinic) %></td>
            <td><%= link_to 'Destroy', clinic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </table>
    <% else %>
      <div class="text-center form-group">No clinics.</div>
    <% end %>
    <div class="form-group text-center">
      <%= link_to 'New Clinic', new_clinic_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>