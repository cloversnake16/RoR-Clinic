<% if @call_back %>
  <div class="alert alert-success">
    <% if @call_back.user_id == current_user.id %>
      <p>Doctor <%= @call_back.doctor.name %> has scheduled meeting with you at <%= @call_back.scheduled_time.strftime("%B %-d, %Y %I:%M %P") %>.</p>
    <% else %>
      <p>You have has scheduled meeting with patient <%= @call_back.user.try(:name) %> at <%= @call_back.scheduled_time.strftime("%B %-d, %Y %I:%M %P") %>.</p>
    <% end %>

    <p>Please click <%= link_to 'here', video_sessions_url %> to go to Pending Call Backs page.</p>
  </div>
<% end %>
<% if logged_in? %>
  <div class="center jumbotron">
    <h2>Welcome to 24-7 Online Clinic</h1>
    <h2>
    Welcome to your online clinic where you will receive access to doctors within your city without waiting in line or making an appointment.
    </h2>
    <% if logged_in? %>
      <% if current_user.csr? %>
        <%= link_to video_sessions_path(params: { video_session: {}, online_visit: true }), method: :post, class: "btn btn-primary" do %>
          <span class="glyphicon glyphicon-camera"></span>&nbsp;Start Online Visit
        <% end %>
      <% elsif !current_user.doctor? %>
        <%= link_to video_sessions_path(params: { video_session: {}, online_visit: true }), method: :post, class: "btn btn-primary start-online-visit" do %>
          <span class="glyphicon glyphicon-camera"></span>&nbsp;Start New Visit
        <% end %>
      <% end %>
    <% else %>
      <%= link_to t('content.signup_now'), signup_path, class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
